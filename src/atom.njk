---
permalink: "/feed.atom"
eleventyExcludeFromCollections: true
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
{% set siteUrl = site.url or "https://journal.judywinsor.com" %}
{% set posts = (collections.journal or collections.all) | reverse | head(20) %}
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-US">
  <title>{{ site.title | default("Judy Winsor â€” Journal") }}</title>
  <id>{{ siteUrl }}</id>
  <updated>{{ posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <generator>Eleventy</generator>

  <!-- self + site links -->
  <link rel="self" href="{{ page.url | absoluteUrl(siteUrl) }}" type="application/atom+xml" />
  <link rel="alternate" href="{{ siteUrl }}" type="text/html" />

  {% for post in posts %}
  <entry>
    <title>{{ post.data.title | xmlEscape }}</title>

    <!-- canonical id + link -->
    <id>{{ post.url | absoluteUrl(siteUrl) }}</id>
    <link rel="alternate" href="{{ post.url | absoluteUrl(siteUrl) }}" type="text/html" />

    <!-- dates -->
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <published>{{ post.date | dateToRfc3339 }}</published>

    <!-- author -->
    <author><name>Judy Winsor</name></author>

    <!-- tags -->
    {% if post.data.tags %}
      {% for t in post.data.tags %}
        <category term="{{ t }}" />
      {% endfor %}
    {% endif %}

    <!-- full HTML content -->
    <content type="html"><![CDATA[
      {{ post.templateContent | safe }}
    ]]></content>
  </entry>
  {% endfor %}
</feed>
