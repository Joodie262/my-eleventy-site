<script>
(function () {
  const root = document.documentElement;     // toggle class on <html>
  const btn  = document.getElementById('theme-toggle');

  // Restore saved choice (default = purple = no class)
  const saved = localStorage.getItem('theme');
  if (saved === 'teal') root.classList.add('theme-teal');

  function renderLabel() {
    const isTeal = root.classList.contains('theme-teal');
    btn.textContent = isTeal ? 'Switch to purple' : 'Switch to teal';
    btn.setAttribute('aria-pressed', String(isTeal));
  }

  btn.addEventListener('click', () => {
    const isTeal = root.classList.toggle('theme-teal');
    localStorage.setItem('theme', isTeal ? 'teal' : 'purple');
    renderLabel();
  });

  renderLabel();
})();
